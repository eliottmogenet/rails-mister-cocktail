

<div class="container2">
  <div class="row">
    <div class="col lg-6">
      <div class="image-detail">
        <%= image_tag "cocktail-1.jpg", alt: "Cocktail", width: 600 %>
      </div>
    </div>

    <div class="col lg-6">
      <div class="detail">
        <h1> <%= @cocktail.name %> </h1>
        <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>
          <div class="dose-list">
            <% @cocktail.doses.each do |dose| %>
              <ul>
                <li class="list-group-item">
                <p><%= dose.description %></p>
                <p><%= dose.ingredient.name %></p>
                <%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
                </li>
              </ul>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>


